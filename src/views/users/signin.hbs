<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Acount Login
            </div>
            <img src="/img/savia.png" class="rounded-circle mx-auto d-block m-4 logo" alt="">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{name}}">
                </div>
                 <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}">
                </div>
                <button class="btn btn-primary btn-block">
                    Signin
                </button>
                </form>
            </div>
        </div>
    </div>
</div>